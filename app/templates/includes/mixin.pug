mixin card1(content)
  each item in content
    .col
      a(href="#").card.card-1
        if (item.stock)
          span.label= item.stock 
        .card_img
          img(src=`uploads/${item.image}.jpg`, alt="Product image")
        .card_content
          h5= item.title
          p.code= item.code
          if (item.realPrice)
            span.real-price= item.realPrice
          if (item.info)
            .info.clearfix
              - for (var i = 0; i < item.info.length; i++)
                .info_item
                  span= item.info[i]
          if (item.check)
            - for (var i = 0; i < item.check.length; i++)
              .filter_check-circle
                input(type="checkbox")
                label(class= item.check[i].class)
          .card_content--bt.clearfix
            span.price= item.price
            span.buy Купить

