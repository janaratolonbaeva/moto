mixin radio(radioContent)
  each item in radioContent
    .filter_box
      h6= item.title
      - if (item.radio.length)
        - for (var i = 0; i < item.radio.length; i++)
          .filter_radio
            - if (item.radio[i].checked)
              input(type="radio", id= item.radio[i].id name= item.radio[i].name, checked= item.radio[i].checked)
              label(for= item.radio[i].for)= item.radio[i].label
            - else
              input(type="radio", id= item.radio[i].id name= item.radio[i].name)
              label(for= item.radio[i].for)= item.radio[i].label
        - if (item.link)
          a(href="#").link= item.link

